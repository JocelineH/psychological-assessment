.assesspage_container {
  width: 100%;
  height: 100%;
  background: #FFFFFF;
  display: flex;
  flex: 1;
  flex-direction: row;
}
.assesspage_container .assesspage_left {
  display: flex;
  flex-direction: column;
  position: relative;
  padding-left: 20rpx;
  width: 160rpx;
  height: 100%;
}
.assesspage_container .classify_list {
  flex: 1;
  height: 0;
}
.assesspage_container .classify_list .classify_list_item {
  display: flex;
  align-items: center;
}
.assesspage_container .classify_list .classify_list_item_line {
  margin-right: 10rpx;
  width: 5rpx;
  height: 40rpx;
  background-color: transparent;
}
.assesspage_container .classify_list .classify_list_item_line_active {
  background-color: #1AB84E;
}
.assesspage_container .classify_list .classify_list_item_text {
  color: #333333;
  font-size: 30rpx;
  font-weight: 400;
}
.assesspage_container .classify_list .classify_list_item_text_active {
  font-size: 32rpx;
  color: #1AB84E;
}
.assesspage_container .assesspage_top {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
}
.assesspage_container .assesspage_top_title {
  color: #333333;
  font-size: 36rpx;
  font-weight: 400;
}
.assesspage_container .assesspage_top_search {
  width: 100%;
  text-align: right;
}
.assesspage_container .assesspage_right {
  display: flex;
  flex-direction: column;
  flex: 1;
  position: relative;
  padding-right: 20rpx;
  height: 100%;
}
.assesspage_container .sort {
  width: 100%;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.assesspage_container .sort .sort_title {
  color: #333333;
  font-size: 30rpx;
}
.assesspage_container .sort .sort_btn {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.assesspage_container .sort .sort_btn .sort_btn_text {
  color: #333333;
  font-size: 30rpx;
}
.assesspage_container .sort .sort_btn .sort_btn_icon {
  margin-left: 8rpx;
  width: 28rpx;
  height: 20rpx;
}
.assesspage_container .assesses_list {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-height: 0;
  overflow: visible;
  position: relative;
  padding-left: 20rpx;
}