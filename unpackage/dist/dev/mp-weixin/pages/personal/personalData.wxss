.persondata_container {
  width: 100%;
  height: 100%;
  text-align: center;
  background-color: #FFFFFF;
}
.persondata_container .title_block {
  padding-top: 20rpx;
}
.persondata_container .title_block .main_title {
  font-size: 40rpx;
}
.persondata_container .title_block .main_title_desc {
  margin-top: 20rpx;
  font-size: 32rpx;
}
.persondata_container .info_block {
  margin-top: 60rpx;
  text-align: center;
}
.persondata_container .info_block .sub_title {
  color: #666666;
  font-size: 32rpx;
  font-weight: 500;
}
.persondata_container .info_block .sex_block {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding-top: 60rpx;
}
.persondata_container .info_block .sex_block_item {
  width: 180rpx;
  padding: 40rpx 0;
  border-radius: 10rpx;
  border: 2rpx solid #BBBBBB;
}
.persondata_container .info_block .sex_block_item_active {
  border: 2rpx solid #3D7EFF;
}
.persondata_container .info_block .sex_block_item_icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
}
.persondata_container .info_block .sex_block_item_text {
  margin-top: 30rpx;
  color: #666666;
  font-size: 32rpx;
}
.persondata_container .info_block .sex_block_item_text_active {
  color: #3D7EFF;
}
.persondata_container .info_block .borth_block {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.persondata_container .info_block .borth_block .borth_block_label {
  font-size: 28rpx;
}
.persondata_container .info_block .borth_block .example-body {
  background-color: #fff;
  padding: 10px;
}
.persondata_container .info_block .borth_block .uni-date-editor--x {
  width: 300rpx;
}
.persondata_container .info_block .borth_block .uni-date-x input, .persondata_container .info_block .borth_block .uniui-calendar, .persondata_container .info_block .borth_block .uniui-clear {
  color: #3D7EFF !important;
}
.persondata_container .button_block {
  position: absolute;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%);
}