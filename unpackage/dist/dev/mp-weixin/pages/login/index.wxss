.login_container {
  height: 100%;
  text-align: center;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
  padding: 0 40rpx;
}
.login_container .form_row {
  /* width: 100%; */
  margin-top: 20rpx;
  padding: 0 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  overflow: hidden;
  border: 2rpx solid #1AB84E;
  border-radius: 50rpx;
}
.login_container .label {
  color: black;
  font-size: 32rpx;
  /* line-height: 14rpx; */
}
.login_container .form_row_content {
  display: flex;
  flex: 1;
  flex-direction: row;
  align-items: center;
}
.login_container .form_row_content input {
  flex: 1;
  text-align: left;
  font-size: 32rpx;
}
.login_container .code_btn {
  padding: 10rpx 10rpx;
  color: #1AB84E;
  font-size: 32rpx;
  /* 		border: 1rpx solid $global-color; */
}
.login_container .code_btn_dis {
  color: #999999;
  /* border: 1rpx solid #DDDDDD; */
}
.login_container .sign_agreement {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.login_container .sign_agreement checkbox .wx-checkbox-input {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50% !important;
  border-color: #1AB84E;
}
.login_container .sign_agreement_text {
  text-align: center;
  font-size: 30rpx;
}
.login_container .sign_agreement_link {
  color: #1AB84E;
}
.login_container .login_btn {
  margin-top: 20rpx;
  padding: 20rpx;
  height: 50rpx;
  background: #1AB84E;
  border-radius: 50rpx;
}
.login_container .auth_login_btn {
  background: none;
}
.login_container .login_btn_text {
  color: white;
  font-size: 34rpx;
  font-weight: 500;
}
.login_container .auth_login_btn_text {
  color: #1AB84E;
}