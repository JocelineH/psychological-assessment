.login_container .login_btn {
  margin-top: 20rpx;
  padding: 20rpx;
  height: 50rpx;
  background: #1AB84E;
  border-radius: 50rpx;
}
.login_container .auth_login_btn {
  background: none;
}
.login_container .login_btn_text {
  color: white;
  font-size: 34rpx;
  font-weight: 500;
}
.login_container .auth_login_btn_text {
  color: #1AB84E;
}
.login_container .dialog {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #000000a1;
  overflow: hidden;
  z-index: 10;
}
.login_container .dialog .dialog_container {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 45rpx 30rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  background: #FFFFFF;
}
.login_container .dialog .dialog_top {
  display: flex;
  flex: 1;
  flex-direction: row;
  align-items: center;
}
.login_container .dialog .dialog_top .dialog_top_img {
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
}
.login_container .dialog .dialog_top .dialog_top_name {
  margin-left: 20rpx;
  color: #131313;
  font-size: 25rpx;
}
.login_container .dialog .dialog_top .dialog_top_text {
  margin-left: 10rpx;
  color: #131313;
  font-size: 25rpx;
}
.login_container .dialog .dialog_title {
  margin-top: 50rpx;
  padding-bottom: 30rpx;
  color: #666666;
  font-size: 28rpx;
  font-weight: 500;
  text-align: left;
  border-bottom: 0.5rpx solid #efefef;
}
.login_container .dialog .dialog_user {
  padding: 30rpx 0;
  display: flex;
  flex: 1;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 0.5rpx solid #efefef;
}
.login_container .dialog .dialog_user .dialog_user_ava {
  display: flex;
  padding: 0;
}
.login_container .dialog .dialog_user .dialog_user_ava .dialog_user_img {
  width: 100rpx;
  height: 100rpx;
}
.login_container .dialog .dialog_user .dialog_user_name {
  margin-left: 40rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.login_container .dialog .dialog_user .dialog_user_name .dialog_user_name_text {
  text-align: left;
}
.login_container .dialog .dialog_user .dialog_user_name .dialog_user_name_input {
  text-align: left;
  font-size: 25rpx;
}
.login_container .dialog .dialog_bottom {
  margin: 50rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.login_container .dialog .dialog_bottom .dialog_btn {
  margin: 0;
  width: 180rpx;
  display: flex;
  justify-content: center;
  font-size: 24rpx;
  color: #1AB84E;
  background-color: #ffffff;
  border-radius: 0;
}
.login_container .dialog .dialog_bottom .dialog_btn_confirm {
  margin-left: 30rpx;
  color: #ffffff;
  background-color: #1AB84E;
}